# Минимальный .htaccess для Reg.ru / ISPManager
# Все редиректы уже настроены на хостинге

RewriteEngine On

# ========== БЕЗОПАСНОСТЬ ==========

# Защита конфигурационных файлов
<Files ~ "\.(env|ini|log|sh|sql|bak|old)$">
    Order allow,deny
    Deny from all
</Files>

<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Запрет листинга директорий
Options -Indexes

# ========== API ПЕРЕЗАПИСЬ ==========

# Для API endpoints (опционально, если нужно красивые URL)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Пример: api/orders -> orders.php
RewriteRule ^api/orders/?$ orders.php [L,QSA]
RewriteRule ^api/orders/([0-9]+)/?$ orders.php?id=$1 [L,QSA]
RewriteRule ^api/payments/?$ payments.php [L,QSA]
RewriteRule ^api/stats/?$ stats.php [L,QSA]

# ========== КЭШИРОВАНИЕ ==========

<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# ========== ЗАЩИТНЫЕ ЗАГОЛОВКИ ==========

<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>